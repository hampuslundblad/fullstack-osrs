# build platform is needed to build to amd64
FROM --platform=$BUILDPLATFORM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG TARGETARCH
WORKDIR /src

COPY ["DotnetComp.csproj", "."]

RUN dotnet restore --arch $TARGETARCH

COPY . .    
RUN dotnet publish -c Release -o /app -a $TARGETARCH

#VOLUME /app/test.db
#runtime

RUN dotnet tool install -g dotnet-ef

ENV PATH="${PATH}:/root/.dotnet/tools"

RUN dotnet ef database update

#RUN dotnet ef migrations bundle --project DotnetComp.csproj --output ./bundle

#RUN ./bundle --connection ./test.db

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime

WORKDIR /app
COPY --from=build /app .

EXPOSE 5000
ENTRYPOINT ["dotnet", "DotnetComp.dll"]
